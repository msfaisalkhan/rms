{% extends 'templates/app.twig' %}

	{% block content %}
<div class="row">
	<div class="col-md-10">
		<div id="studentlist">
			<div class="panel">
                <div class="panel-heading">
                    <div class="text-center">
                        <div class="row">
                            <div class="col-sm-9">
                                <h3 class="pull-left"> <!-- <a class="btn" href="{{ path_for('students.view', {'id': student.id }) }}"> -->
        {{  student.first_name }} {{  student.last_name }} <!-- </a> --> 
                                </h3>
                            </div>
                            <div class="col-sm-3">
                                <!-- <h4 class="pull-right">
                                <small> {{ student.placed_year }} </small>
                                </h4> -->
                            </div>
                        </div>
                    </div>
                </div>
                
            <div class="panel-body">
                <!-- <p>{{  student.first_name }} {{  student.last_name }}</p> --> 

                <table class="table table-hover table-striped table-bordered">
                    
                    <thead>
                        <tr>
                            <th style="width: 20%; font-weight: bold;">Student Name</th>
                            <th>{{  student.first_name }} {{  student.last_name }}</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>USN</td>
                            <td>{{student.usn}}</td>
                        </tr>
                        <tr>
                            <td>Department</td>
                            <td>Information Science</td>
                        </tr>
                        <tr>
                            <td>Mobile Number</td>
                            <td>{{student.mobile_no}}</td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>{{student.email}}</td>
                        </tr>
                        <tr>
                            <td>Placed Company Name</td>
                            <td><a href="{{ path_for('companies.view',{'id':company.id}) }}">{{student.company.name}}</a></td>
                        </tr>
                        <tr>
                            <td>Placed Year</td>
                            <td>{{student.placed_year}}</td>
                        </tr>
                        <tr>
                            <td>Placed Position</td>
                            <td>{{student.position}}</td>
                        </tr>
                        <!-- <tr>
                            <td>Deadline</td>
                            <td>{{post.application_deadline}}</td>
                        </tr>
                        <tr>
                            <td>Tags</td>
                            <td>
                                {% for tag in tags %}
                                    <a href="{{path_for('searches.add',{'searchTerm':tag})}}">{{tag}}</a>
                                {% endfor %}
                            </td>
                        </tr> -->
                        <!-- <tr>
                            <td>Location</td>
                            <td>{{post.state.name}}, {{post.country.name}}</td>
                        </tr> -->
                    </tbody>

                </table> 
            </div>
            
            <!-- <div class="panel-footer">
                <span class="label label-default">Welcome</span> <span class="label label-default">Updates</span> <span class="label label-default">July</span>
            </div> -->
        </div>
        
       </div>
    </div>
    <!-- Only the owner of this student and the admin can edit and delete it -->
     {% if (auth.user.role_id < 3) %}
		<div class="text-center">
            <p><a href="{{ path_for('students.edit', {'id': student.id } ) }}" class="btn btn-primary">Edit student</a>
                </p>
                <p> <a onclick="return confirm('Are you sure you wish to delete this student?');"  href="{{ path_for('students.delete', {'id': student.id } ) }}" class="btn btn-warning">Delete student</a>
        
                </p>
          </div>
             
    {% endif %}
    </div>
        <div class="col-md-1"></div>
        <div class="col-md-3">
        </div>
        <div class="col-md-1">
        </div>
    </div>
{% endblock %}
