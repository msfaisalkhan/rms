{% extends 'templates/app.twig' %}

  {% block content %}
<div class="row">
  <div class="col-md-10">
    <div id="searchlist">
      <div class="panel">
                <div class="panel-heading">
                    <div class="text-center">
                        <div class="row">

                          {% if(searchTerm) %}
                            <div class="col-sm-9">
                                <h3 class="pull-left">Search results for "{{ searchTerm }}" </h3>
                            </div>
                          {% endif %}

                        </div>
                    </div>
                </div>
                
            <div class="panel-body">
                <div class="container">
  <div class="row">
        <div class="span12">
        <div class="" id="loginModal">
              
              <div class="modal-body">
                <div class="well">
                  <ul class="nav nav-tabs">
                    <li class="active"><a href="#users" data-toggle="tab">Students</a></li>
                    <li><a href="#skills" data-toggle="tab">Companies</a></li>
                  </ul><br/>
                  <div id="myTabContent" class="tab-content">
                    <div class="tab-pane active in" id="users">
                      <p>Click on student to see more details</p>
                      {% for student in students %}
                      <div class="media">
                          <!-- <div class="media-left media-middle">
                            <a href="#">
                              <img class="media-object" src="..." alt="...">
                            </a>
                          </div> -->
                          <div class="media-body">
                            <a href="{{ path_for('students.view',{'id':student.id}) }}"><h4 class="media-heading">{{student.first_name}} {{student.last_name}}</h4></a>
                            {{student.company.name}} 
                          </div>
                      </div>

                      {% endfor %}

                    </div>
                    <div class="tab-pane fade" id="skills">
                      <p>Click on company to see more details</p>
                      {% for company in companies %}
                      <div class="media">
                          <!-- <div class="media-left media-middle">
                            <a href="#">
                              <img class="media-object" src="..." alt="...">
                            </a>
                          </div> -->
                          <div class="media-body">
                            <a href="{{ path_for('companies.view',{'id':company.id}) }}"><h4 class="media-heading">{{company.name}}</h4></a>{{company.address}}
                            
                          </div>
                      </div>

                      {% endfor %}
                    </div>
                </div>
              </div>
            </div>
        </div>
  </div>
</div>
            </div>
            
        </div>
        
       </div>
    </div>
    </div>
        <div class="col-md-1"></div>
        <div class="col-md-3">
        </div>
        <div class="col-md-1">
        </div>
    </div>
    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
{% endblock %}
